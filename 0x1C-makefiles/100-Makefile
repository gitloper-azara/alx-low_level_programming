# declare variables
CC = gcc
SRC = main.c school.c
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# build the executable from object files
all: ${NAME}

${NAME}: ${SRC} m.h
	${CC} ${CFLAGS} ${SRC} -o $@

# clean emacs and vim temporary files along with executable
clean:
	${RM} *~ ${NAME}

# force recompilation of all object files
re: clean all

# enforce header dependency for compilation
.PHONY: all clean re
m.h:  # Missing header dependency
	${RM} *~ ${NAME}
