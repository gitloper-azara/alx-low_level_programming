# declare variables
CC = gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME = school

# build the executable with given name
all: ${NAME}

# build the executable from object files
${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

# compile individual source files into object files
%.o: %.c
	${CC} -c -o $< $@
